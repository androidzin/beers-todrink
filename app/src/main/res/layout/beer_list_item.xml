<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/beer_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        android:descendantFocusability="blocksDescendants">


            <ImageView
                android:id="@+id/beer_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/beer_sample"
        />
        <ImageView
            android:id="@+id/beer_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />

            <TextView
                android:id="@+id/beer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:maxWidth="@dimen/list_item_max_width" />

            <TextView
                android:id="@+id/beer_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/beer_name"
                android:layout_alignParentLeft="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:maxWidth="@dimen/list_item_max_width"/>

            <TextView
                android:id="@+id/beer_abv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/beer_release_date"
                android:layout_alignParentLeft="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:maxWidth="@dimen/list_item_max_width"/>

            <TextView
                android:id="@+id/beer_temperature_to_drink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/beer_abv"
                android:layout_alignParentLeft="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:maxWidth="@dimen/list_item_max_width"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
